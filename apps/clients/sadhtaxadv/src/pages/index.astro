---
import Layout from '../layouts/Layout.astro';
import { Button } from '../components/ui/button';
---

<Layout
	title="Virtual Financial & Tax Services in Upstate NY | SADH Tax Advisory"
	description="Trusted virtual accounting, tax, and financial management services for individuals, businesses, and government entities across Upstate New York and beyond."
>
	<!-- Hero Section -->
	<section class="bg-gradient-to-br from-primary via-[#040560] to-primary text-white">
		<div class="container mx-auto px-4 py-20 md:py-32">
			<div class="grid lg:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
				<!-- Left Column: Content -->
				<div>
					<div class="inline-block mb-6">
						<span class="bg-secondary/20 border border-secondary/30 text-white px-5 py-2 rounded-full text-sm font-medium backdrop-blur-sm">
							Trusted Virtual Financial Services
						</span>
					</div>
					<h1 class="mb-6 leading-tight">
						Build Your Financial Future with <span class="text-secondary">Expert Tax Advisory</span>
					</h1>
					<p class="text-lg md:text-xl text-white/90 mb-8 leading-relaxed">
						Use our virtual platform to simplify accounting, tax preparation, and financial management. Serving individuals, businesses, and government entities across Upstate New York and beyond.
					</p>
					<div class="flex flex-col sm:flex-row gap-4">
						<Button size="lg" className="bg-secondary text-white hover:bg-secondary/90 shadow-lg" asChild>
							<a href="#contact">Get Started Today</a>
						</Button>
						<Button size="lg" variant="outline" className="border-2 border-white text-white hover:bg-white hover:text-primary" asChild>
							<a href="#services">View Our Services</a>
						</Button>
					</div>
				</div>

				<!-- Right Column: Image/Visual -->
				<div class="hidden lg:flex items-center justify-center">
					<div class="relative w-full max-w-md">
						<div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
							<svg class="w-full h-auto text-secondary" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg">
								<rect x="50" y="200" width="50" height="80" fill="currentColor" opacity="0.6" rx="4"/>
								<rect x="120" y="150" width="50" height="130" fill="currentColor" opacity="0.7" rx="4"/>
								<rect x="190" y="100" width="50" height="180" fill="currentColor" opacity="0.8" rx="4"/>
								<rect x="260" y="120" width="50" height="160" fill="currentColor" opacity="0.9" rx="4"/>
								<path d="M50 200 L100 150 L170 100 L240 120 L310 80" stroke="currentColor" stroke-width="3" fill="none"/>
								<circle cx="50" cy="200" r="6" fill="white"/>
								<circle cx="100" cy="150" r="6" fill="white"/>
								<circle cx="170" cy="100" r="6" fill="white"/>
								<circle cx="240" cy="120" r="6" fill="white"/>
								<circle cx="310" cy="80" r="6" fill="white"/>
							</svg>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Core Philosophy Section -->
	<section class="py-16 md:py-24 bg-muted/30">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl md:text-4xl font-bold mb-6">Our Core Philosophy</h2>
				<p class="text-lg md:text-xl text-muted-foreground leading-relaxed">
					At our firm, we believe that <strong>accuracy, integrity, and timeliness</strong> are the foundation of financial success. We build lasting partnerships by understanding your unique goals and delivering reliable solutions that save time and reduce stress.
				</p>
			</div>
		</div>
	</section>

	<!-- Virtual Advantage Section -->
	<section class="py-16 md:py-24">
